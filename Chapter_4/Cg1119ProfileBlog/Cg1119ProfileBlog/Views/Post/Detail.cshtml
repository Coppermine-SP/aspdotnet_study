@model Cg1119ProfileBlog.Models.Post;

<div>
    <h1>@Model.Title</h1>
    <div class="ml-auto">@Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm:ss")</div>
    <p>@Model.Contents</p>
</div>
<div>
    @if (Context.User.Identity.IsAuthenticated)
    {
        <a href="/Post/EditPost/@Model.Id" class="btn btn-primary">내용수정</a>
    }
</div>