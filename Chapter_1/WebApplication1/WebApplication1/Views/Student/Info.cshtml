@model WebApplication1.Models.Student

@{
    ViewData["Title"] = "학생 정보";
}

<h2>안녕하세요 반갑습니다</h2>

<div>
    <h4>학생 정보</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            나이
        </dt>
        <dd class="col-sm-10">
            @Model.Age
        </dd>
        <dt class="col-sm-2">
            키
        </dt>
        <dd class="col-sm-10">
            @Model.Height
        </dd>
        <dt class="col-sm-2">
            성별
        </dt>
        <dd class="col-sm-10">
            @Model.Gender
        </dd>
        <dt class="col-sm-2">
            대학교
        </dt>
        <dd class="col-sm-10">
            @Model.UniversityName
        </dd>
    </dl>
</div>